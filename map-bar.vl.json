{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "name": "am",
    "url": "https://gist.githubusercontent.com/ssuwal/b0e150a81b2815e1013b39ec4ca27b8f/raw/71adc2e610c114e94316d17b548080edca0f6eda/data-processed-complete.csv"
  },
  "concat": [
    {
      "repeat": {
        "row": [
          "Q1",
          "Q2",
          "Q13"
        ]
      },
      "spec": {
        "layer": [
          {
            "width": 150,
            "height": 150,
            "selection": {
              "brush1": {
                "type": "interval",
                "encodings": [
                  "x"
                ]
              }
            },
            "mark": "bar",
            "encoding": {
              "x": {
                "field": {
                  "repeat": "row"
                },
                "title": null,
                "type": "ordinal"
              },
              "y": {
                "aggregate": "count",
                "type": "quantitative"
              },
              "color": {
                "value": "#ddd"
              }
            }
          },
          {
            "transform": [
              {
                "filter": {
                  "selection": {
                    "or": [
                      "brush1",
                      "brush"
                    ]
                  }
                }
              }
            ],
            "mark": "bar",
            "encoding": {
              "x": {
                "field": {
                  "repeat": "row"
                },
                "axis": {
                  "title": ""
                },
                "type": "ordinal"
              },
              "y": {
                "aggregate": "count",
                "type": "quantitative"
              }
            }
          }
        ]
      }
    },
    {
      "height": 650,
      "width": 700,
      "layer": [
        {
          "data": {
            "url": "data/world-110m.json",
            "format": {
              "type": "topojson",
              "feature": "countries"
            }
          },
          "projection": {
            "type": "mercator",
            "scale": 140
          },
          "mark": {
            "type": "geoshape",
            "fill": "#666",
            "stroke": "#eee"
          }
        },
        {
          "projection": {
            "type": "mercator",
            "scale": 140
          },
          "mark": {
            "type": "circle"
          },
          "selection": {
            "brush": {
              "type": "multi",
              "fields": [
                "LocationLongitude"
              ]
            }
          },
          "encoding": {
            "longitude": {
              "field": "LocationLongitude",
              "type": "quantitative"
            },
            "latitude": {
              "field": "LocationLatitude",
              "type": "quantitative"
            },
            "size": {
              "value": 50
            },
            "color": {
              "value": "#ddd"
            },
            "tooltip": [
              {
                "field": "Q5",
                "type": "ordinal"
              }
            ]
          }
        },
        {
          "transform": [
            {
              "filter": {
                "selection": {
                  "or": [
                    "brush1",
                    "brush"
                  ]
                }
              }
            }
          ],
          "mark": {
            "type": "circle",
            "tooltip": true
          },
          "projection": {
            "type": "mercator",
            "scale": 140
          },
          "encoding": {
            "longitude": {
              "field": "LocationLongitude",
              "type": "quantitative"
            },
            "latitude": {
              "field": "LocationLatitude",
              "type": "quantitative"
            },
            "size": {
              "value": 50
            },
            "color": {
              "type": "nominal",
              "field": "Q5",
              "legend":{
                "direction":"vertical",
                "orient": "none",
                "legendX": 770,
                "legendY": 10,
                "fillColor": "antiquewhite"
              }
            }
          }
        }
      ]
    }
  ],
  "config": {
    "projection": {
      "type": "mercator",
      "center": [
        -130,
        80
      ]
    }
  }
}