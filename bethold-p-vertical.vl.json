{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "description": "A population pyramid for the US in 2000.",
    "data": {
      "name": "pvalues",
      "url": "https://raw.githubusercontent.com/Betholdcamp/hello-world/master/Healthy_4.csv"
    },
    "spacing": 0,
    "hconcat": [
      {
        "transform": [
          {
            "filter": {
              "field": "Marriage",
              "equal": "Married"
            }
          }
        ],
        "title": "Married",
        "encoding": {
          "y": {
            "field": "Categories",
            "type": "ordinal",
            "axis": null,
            "sort": "descending"
          },
          "x": {
            "field": "values",
            "type": "quantitative",
            "axis": {
              "title": "Importance[0-most]",
              "format": "s"
            },
            "sort": "descending"
          },
          "color": {
            "field": "Marriage",
            "type": "nominal",
            "scale": {
              "range": [
                "#675193",
                "#ca8861"
              ]
            },
            "legend": null
          }
        },
        "layer": [
          {
            "selection": {
              "pts": {
                "type": "single",
                "on": "mouseover"
              }
            },
            "mark": "bar"
          },
          {
            "mark": {
              "type": "text",
              "align": "right",
              "baseline": "middle",
              "dx": 3
            },
            "encoding": {
              "text": {
                "condition": {
                  "selection": "pts",
                  "field": "values",
                  "type": "quantitative"
                }
              }
            }
          }
        ]
      },
      {
        "width": 20,
        "view": {
          "stroke": null
        },
        "mark": {
          "type": "text",
          "align": "center"
        },
        "encoding": {
          "y": {
            "field": "Categories",
            "type": "ordinal",
            "axis": null,
            "sort": "descending"
          },
          "text": {
            "field": "Categories",
            "type": "ordinal"
          }
        }
      },
      {
        "transform": [
          {
            "filter": {
              "field": "Marriage",
              "equal": "Single"
            }
          }
        ],
        "title": "Single",
        "encoding": {
          "y": {
            "field": "Categories",
            "type": "ordinal",
            "title": null,
            "axis": null,
            "sort": "descending"
          },
          "x": {
            "field": "values",
            "type": "quantitative",
            "axis": {
              "title": "Importance[0-most]",
              "format": "s"
            }
          },
          "color": {
            "field": "Marriage",
            "type": "nominal",
            "legend": null
          }
        },
        "layer": [
          {
            "selection": {
              "pts": {
                "type": "single",
                "on": "mouseover"
              }
            },
            "mark": "bar"
          },
          {
            "mark": {
              "type": "text",
              "align": "left",
              "baseline": "middle",
              "dx": 3
            },
            "encoding": {
              "text": {
                "condition": {
                  "selection": "pts",
                  "field": "values",
                  "type": "quantitative"
                }
              }
            }
          }
        ]
      },
      {
        "vconcat": [
          {
            "transform": [
              {
                "filter": {
                  "selection": "pts"
                }
              }
            ],
            "mark": "bar",
            "encoding": {
              "x": {
                "field": "Categories",
                "type": "nominal"
              },
              "y": {
                "field": "P values",
                "type": "quantitative"
              }
            }
          }
        ]
      }
    ],
    "config": {
      "view": {
        "stroke": null
      },
      "axis": {
        "grid": false
      }
    }
  }